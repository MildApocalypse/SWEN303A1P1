extends ../node_modules/jade-bootstrap/_bootstrap

block body
    +navbar
        +nav_item("/", "active") Home
        +nav_item("/search", "active") Search
        +nav_item("/browse/*", "active") Browse
        +nav_item("/add", "active") Add files
    br

    .container
        h3(style = {color: '#999999'}) Add files to database
        br
        form(action = "/upload", method = "post", encType = "multipart/form-data")
            div(id = "urlInput")
                input(type = "text", name="urlInput", class = "form-control",
                placeholder = "Enter path to be uploaded to here.")
            br

            div(id = "fileInput")
                input(type = "file", name="fileInput",
                placeholder = "Enter file here.")
            br
            div(id = "urlInputBtn")
                button(type = "submit", class = "btn btn-default")
                    span(class = "glyphicon glyphicon-ok-circle", aria-hidden = "true")


    -if(b == 1) {
    div(style={color: 'white', background: '#c62828'})
        h3 Upload Successful.
    -}
    -else if (b == 2){
    div(style={color: 'white', background: '#c62828'})
        h3 Upload failed
        p Please check the path and file you are uploading.
    -}